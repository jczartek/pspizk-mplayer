<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MPlayer">

    <Style x:Key="GoBackButtons">
        <Setter Property="Button.Background" Value="Black" />
        <Setter Property="Button.Width" Value="40" />
        <Setter Property="Button.Height" Value="40" />
        <Setter Property="Button.Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Name="Border" Background="{TemplateBinding Background}" CornerRadius="7" Padding="5">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="Button.IsMouseOver" Value="True">
                <Setter Property="Button.Background" Value="Orange" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="MenuButtons">
        <Setter Property="Button.Background" Value="White" />
        <Setter Property="Button.Width" Value="20" />
        <Setter Property="Button.Height" Value="20" />
        <Setter Property="Button.BorderThickness" Value="0" />
        <Setter Property="Button.Margin" Value="2" />
    </Style>
    
</ResourceDictionary>